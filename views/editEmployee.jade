extends layout

block content
    h1 Edit Employee

    // Form to edit an existing employee
    form(method='post' action='/employees/edit/#{employee.id}')
        .form-group
            label(for='name') Name:
            input#name.form-control(type='text' name='name', value=employee.name, required)
        button.btn.btn-primary(type='submit') Update Employee
